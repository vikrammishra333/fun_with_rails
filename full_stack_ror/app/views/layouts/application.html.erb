    <div class="container">

      <div class="left-division">

        <div class="header">

        </div>
        <div class="row">
          <%= render :partial => 'layouts/navbar' %>
          <div class="span7">
            <%= bootstrap_flash %>
            <%= yield %>
          </div>
          <div class="span3">
            <%= render :partial => 'layouts/sidebar' %>
          </div><!--/span-->
        </div><!--/row-->

        <footer>
          <p>&copy; Company 2014</p>
        </footer>

      </div>

      <div class="right-division"></div>

      <div class="clear"></div>

    </div> <!-- /container -->

